<%- include('partials/header') %>

<div class="container my-5">
  <h2 class="mb-4">Tambah Galeri Baru</h2>

  <form action="/gallery/add" method="POST" enctype="multipart/form-data">
    <div class="mb-3">
      <label for="title" class="form-label">Judul</label>
      <input type="text" name="title" id="title" class="form-control" required>
    </div>

    <div class="mb-3">
      <label for="description" class="form-label">Deskripsi</label>
      <textarea name="description" id="description" class="form-control" required></textarea>
    </div>

    <div class="mb-3">
      <label for="image" class="form-label">Gambar</label>
      <input type="file" name="image" id="image" accept="image/*" class="form-control" required>
    </div>

    <div class="mb-3">
      <label for="audio" class="form-label">Audio</label>
      <input type="file" name="audio" id="audio" accept="audio/*" class="form-control">
    </div>

    <button type="submit" class="btn btn-primary">Tambah Galeri</button>
  </form>
</div>

<%- include('partials/footer') %>
